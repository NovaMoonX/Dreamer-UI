{
  "name": "@moondreamsdev/dreamer-ui",
  "version": "1.7.18",
  "homepage": "https://ui.moondreams.dev",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "description": "A collection of Tailwind CSS components for React",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "dreamer-ui-init": "dist/init.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/src/components/index.d.ts",
      "import": "./dist/components.esm.js",
      "require": "./dist/components.js"
    },
    "./hooks": {
      "types": "./dist/src/hooks/index.d.ts",
      "import": "./dist/hooks.esm.js",
      "require": "./dist/hooks.js"
    },
    "./providers": {
      "types": "./dist/src/providers/index.d.ts",
      "import": "./dist/providers.esm.js",
      "require": "./dist/providers.js"
    },
    "./symbols": {
      "types": "./dist/src/symbols/index.d.ts",
      "import": "./dist/symbols.esm.js",
      "require": "./dist/symbols.js"
    },
    "./utils": {
      "types": "./dist/src/utils/index.d.ts",
      "import": "./dist/utils.esm.js",
      "require": "./dist/utils.js"
    },
    "./styles": "./dist/styles.css"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwindcss",
    "ui-components",
    "design-system"
  ],
  "author": "Nova Moon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xFallingDuskx/Dreamer-UI.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:setup && npm run build:types",
    "build:lib": "vite build --config vite.config.lib.mts",
    "build:types": "tsc --project tsconfig.lib.json",
    "build:demo": "tsc -b && vite build",
    "build:setup": "cp scripts/init.js dist/init.js && node scripts/add-theme.js",
    "postbuild": "chmod +x dist/init.js && npm run build:types",
    "lint": "eslint .",
    "preview": "vite preview",
    "publish:test": "npm version prerelease --preid=test && npm publish --tag test"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.0.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^11.0.3",
    "globals": "^15.15.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.9",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "dependencies": {
    "@moondreamsdev/dreamer-ui": "^1.7.10-test.171"
  }
}
